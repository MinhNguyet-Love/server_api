<!-- admin.ejs -->
<%- include('header') %>

<!-- Form đăng nhập -->
<div id="loginForm" class="box">
    <h2 class="subtitle">Đăng nhập</h2>
    <form action="/login" method="post">
        <div class="field">
            <label class="label">Tên đăng nhập</label>
            <div class="control">
                <input class="input" type="text" name="username" placeholder="Nhập tên đăng nhập" required>
            </div>
        </div>

        <div class="field">
            <label class="label">Mật khẩu</label>
            <div class="control">
                <input class="input" type="password" name="password" placeholder="Nhập mật khẩu" required>
            </div>
        </div>

        <div class="field">
            <div class="control">
                <button class="button is-primary" type="submit">Đăng nhập</button>
            </div>
        </div>
    </form>
</div>

<!-- Form chỉnh sửa thông tin -->
<div id="editForm" class="box" style="display: none;">
    <h2 class="subtitle">Chỉnh sửa thông tin</h2>
    <form action="/updateInfo" method="post">
        <div class="field">
            <label class="label">Họ và Tên</label>
            <div class="control">
                <input class="input" type="text" name="fullname" placeholder="Nhập họ và tên">
            </div>
        </div>

        <div class="field">
            <label class="label">Email</label>
            <div class="control">
                <input class="input" type="email" name="email" placeholder="Nhập email">
            </div>
        </div>

        <div class="field">
            <label class="label">Số điện thoại</label>
            <div class="control">
                <input class="input" type="tel" name="phone" placeholder="Nhập số điện thoại">
            </div>
        </div>

        <div class="field">
            <div class="control">
                <button class="button is-link" type="submit">Lưu thay đổi</button>
            </div>
        </div>
    </form>
</div>

<%- include('footer') %>
